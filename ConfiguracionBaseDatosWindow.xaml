<Window x:Class="AplicacionDespacho.Windows.ConfiguracionBaseDatosWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Configuración de Base de Datos" Height="550" Width="600"  
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"  
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Configuración de Conexión a Base de Datos"   
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"  
                   HorizontalAlignment="Center"/>

        <!-- Servidor -->
        <Grid Grid.Row="1" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Servidor:"/>
            <TextBox Grid.Column="1" x:Name="txtServidor"   
                     Text="{Binding Servidor, UpdateSourceTrigger=PropertyChanged}"  
                     ToolTip="IP o nombre del servidor SQL Server (ej: 192.168.1.100\\SQLEXPRESS)"/>
        </Grid>

        <!-- Usuario -->
        <Grid Grid.Row="2" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Usuario:"/>
            <TextBox Grid.Column="1" x:Name="txtUsuario"   
                     Text="{Binding Usuario, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!-- Contraseña -->
        <Grid Grid.Row="3" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Contraseña:"/>
            <PasswordBox Grid.Column="1" x:Name="txtPassword"   
                         PasswordChanged="TxtPassword_PasswordChanged"/>
        </Grid>

        <!-- Timeout -->
        <Grid Grid.Row="4" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Timeout (seg):"/>
            <TextBox Grid.Column="1" x:Name="txtTimeout"   
                     Text="{Binding Timeout, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!-- Botón probar conexión y resultado -->
        <Grid Grid.Row="5" Margin="0,15,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="btnProbarConexion" Content="Probar Conexión"   
                    Width="120" Click="BtnProbarConexion_Click"  
                    IsEnabled="{Binding PuedeProbarConexion}"/>

            <!-- Indicador de progreso -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0"   
                        Visibility="{Binding MostrarProgress}">
                <ProgressBar Width="100" Height="20" IsIndeterminate="True" Margin="0,0,10,0"/>
                <TextBlock Text="Probando conexión..." VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Resultado de la prueba -->
        <Grid Grid.Row="6" Margin="0,5" Visibility="{Binding MostrarResultado}">
            <TextBlock x:Name="lblResultadoPrueba"   
                       Text="{Binding ResultadoPrueba}"  
                       Foreground="{Binding ColorResultado}"  
                       FontWeight="Bold" TextWrapping="Wrap"/>
        </Grid>

        <!-- Log de actividad -->
        <GroupBox Grid.Row="7" Header="Log de Actividad" Margin="0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                <TextBox x:Name="txtLogActividad"   
                         Text="{Binding LogActividad}"  
                         IsReadOnly="True"   
                         TextWrapping="Wrap"  
                         Background="White"  
                         BorderThickness="0" Height="68"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Botones de acción -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right"   
                    Margin="0,20,0,0">
            <Button x:Name="btnGuardar" Content="Guardar" Width="80"   
                    Click="BtnGuardar_Click" IsDefault="True"/>
            <Button x:Name="btnRestablecer" Content="Restablecer" Width="100"   
                    Click="BtnRestablecer_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="80"   
                    Click="BtnCancelar_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>